<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DishesShop.Headline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.DishesShop.Subhead1">
        <item name="android:textColor">@color/black_50</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="Theme.DishesShop.KitchenName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.DishesShop.DishName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.DishesShop.Description">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="Theme.DishesShop.FoodName" parent="Theme.DishesShop.Description">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.DishesShop.FoodDescription" parent="Theme.DishesShop.Description">
        <item name="android:textColor">@color/black_65</item>
    </style>

    <style name="Theme.DishesShop.FoodPrice" parent="Theme.DishesShop.Description">
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="Theme.DishesShop.TabText">
        <item name="android:textColor">@color/navigation_tab_color</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.DishesShop.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:translationZ">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.DishesShop.Toolbar">
        <item name="android:minHeight">@dimen/size_76</item>
        <item name="android:background">@color/main_white</item>
    </style>

    <style name="Theme.DishesShop.BlueButtonStyle">
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingVertical">@dimen/padding_16</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>